super + Return
	kitty

super + @space
	dmenu_run

super + F5
	xbacklight -dec 10

super + F6
	xbacklight -inc 10

super + Escape
	pkill -USR1 -x sxhkd

super + r
	bspc wm -r

alt + super + r
	bspc quit

super + {_,shift + }q
    bspc node -{c,k}


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
