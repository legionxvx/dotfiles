#!/bin/sh

if ! [ -x /usr/bin/git ]; then
  echo "Please install git!"
  exit 1
fi

if ! [ -x /usr/bin/ansible ] || ! [ -x /usr/bin/ansible-playbook ]; then
  echo "Please install ansible!"
  exit 1
fi

if ! [ -d  "$HOME/.cfg" ]; then
    echo "Pulling down dotfiles..."
    mkdir -p "$HOME/.cfg"
    git clone --bare "https://github.com/legionxvx/dotfiles.git" "$HOME/.cfg"
    alias config="git --git-dir=$HOME/.cfg/ --work-tree=$HOME"
    config checkout master \
        && config submodule init --recursive \
        && config submodule update
fi

while test $# -gt 0; do
    case "$1" in
        -h|--help)
            echo "Options:"
            echo "-h, --help  Show this message."
            echo "-d, --dry   Check playbook."
            exit 0
            ;;
        -d|--dry)
            shift
            dry=1
            ;;
        *)
            break
            ;;
    esac
done

if [ -d "$HOME/.local/ansible-config" ]; then
    cd "$HOME/.local/ansible-config"
    if [ $dry -eq 1 ]; then
        sudo make dry-run
        exit
    fi
    sudo make dry-run && sudo make run
fi